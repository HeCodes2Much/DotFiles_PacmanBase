#!/usr/bin/env bash

keyboard() {
  # load colors
  . ~/.config/repobar/bar_themes/minimal-mistakes

  icon=" ï‹ "

  keyboard="$(setxkbmap -query | awk '/layout/{print $2}')"
  keyboard="${keyboard^^}"

  printf " %s %s \n" "^c$Foreground^^b$Pink^$icon" "^c$Foreground^^b$Pink_Bright^ $keyboard"
}

keyboard
